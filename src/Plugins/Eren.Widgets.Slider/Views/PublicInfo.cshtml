@model ErenSliderSettings
@{
    Html.AddScriptParts("~/Plugins/Eren.Widgets.Slider/Content/lib/swiper/swiper-bundle.js"); 
    Html.AddCssFileParts("~/Plugins/Eren.Widgets.Slider/Content/css/style.css"); 
    Html.AddCssFileParts("~/Plugins/Eren.Widgets.Slider/Content/lib/swiper/swiper-bundle.css"); 
}
<div class="swiper-container">
    <div class="swiper-wrapper">
        <!-- Slides -->
        <div class="swiper-slide">Slide 1</div>
        <div class="swiper-slide">Slide 2</div>
        <div class="swiper-slide">Slide 3</div>
    </div>
    
    @if (Model.PaginationEnabled)
    {
        <div class="swiper-pagination"></div>
    }
    

     @if (Model.NavigationEnabled)
     {
         <div class="swiper-button-prev"></div>
         <div class="swiper-button-next"></div>
     }
    
    @if (Model.ScroolBarEnabled)
     {
         <div class="swiper-scrollbar"></div>
     }
</div>

<script type="text/javascript">
    const swiper = new Swiper('@Model.ContainerCssSelector', {

        direction: '@Model.Direction.ToString().ToLower()',
        loop: @Model.Loop.ToString().ToLower(),
        speed: @Model.Speed    
        @if (Model.PaginationEnabled)
        {
            <text>
                pagination: {
                el: '@Model.PaginationCssSelector',
                },
            </text>
        }
        @if (Model.NavigationEnabled)
        {
            <text>
            navigation:{
                nextEl:
                '@Model.NavigationNextCssSelector',
                prevEl:
                '@Model.NavigationPrevCssSelector',
            },
            </text>
        }
        @if (Model.ScroolBarEnabled)
        {
            <text>
            scrollbar: {
                el: '@Model.ScrollBarCssSelector',
            },
            </text>
        }      
    });
</script>